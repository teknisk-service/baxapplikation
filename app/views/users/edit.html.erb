<% provide(:title, "Edit user") %>
<h1>Uppdatera din profil</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

    <%= f.label :namn %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :lösenord %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.label :password_confirmation, "Bekräfta lösenord" %>
    <%= f.password_field :password_confirmation, class: 'form-control' %>

    <%= f.submit "Spara dina ändringar", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <div class="gravatar-link">
        <a href="https://www.gravatar.com/emails" target="_blank">Klicka här för att ändra din profilbild</a>
      </div>
    </div>
  </div>
</div>